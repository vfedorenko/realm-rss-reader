<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weezlabs.realmexample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.rssmodule.activities.RssListActivity"
            android:label="@string/main_title"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.channelsmodule.activities.ChannelsActivity"
            android:label="@string/title_activity_channels"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".presentation.channelsmodule.activities.CreateChannelActivity"
            android:screenOrientation="portrait"/>

        <service
            android:name=".businesslogic.webapi.RssFeedUpdateRequest"
            android:exported="false" />
    </application>
</manifest>
